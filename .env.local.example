# Local Development Environment
# Copy this to .env for local development
# This file is safe to commit as it contains no real secrets

# Basic Configuration
DISCOURSE_HOSTNAME=localhost:3000
DISCOURSE_DEVELOPER_EMAILS=dev@localhost,admin@localhost

# Mock SMTP for Development (use tools like MailHog)
DISCOURSE_SMTP_ADDRESS=localhost
DISCOURSE_SMTP_PORT=1025
DISCOURSE_SMTP_USER_NAME=test
DISCOURSE_SMTP_PASSWORD=test
DISCOURSE_SMTP_ENABLE_START_TLS=false

# Development Database
DISCOURSE_DB_PASSWORD=development_password

# Performance (lower for development)
UNICORN_WORKERS=1
DISCOURSE_DB_SHARED_BUFFERS=64MB

# Development Flags
DISCOURSE_FORCE_HTTPS=false
